<layout version="0.1.0">
    <default>
		<reference name="left">
			<block type="websitechat/chat" name="left.top.websitechat" before="-">
				<action method="setTemplate" ifconfig="websitechat/websitechat/enabled">
					<template>websitechat/websitechat.phtml</template> 
				</action>
			</block>
		</reference>
		<reference name="right">
			<block type="websitechat/chat" name="right.top.websitechat" before="-">
				<action method="setTemplate" ifconfig="websitechat/websitechat/enabled">
					<template>websitechat/websitechat.phtml</template> 
				</action>
			</block>
		</reference>
    </default>
	
</layout> 
