<?xml version="1.0" encoding="UTF-8"?>
<config>
  <tabs>
    <magebuzz translate="label" module="multipleorderemail">
      <label>Magebuzz Add-ons</label>
      <sort_order>400</sort_order>
    </magebuzz>
  </tabs>
  <sections>
    <multipleorderemail translate="label" module="multipleorderemail">
      <class>separator-top</class>
      <label>Multiple Order Email</label>
      <tab>magebuzz</tab>
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
        <multipleorderemail_options translate="label" module="multipleorderemail">
          <label>Email Notification for Admin</label>
          <frontend_type>text</frontend_type>
          <sort_order>1</sort_order>
          <show_in_default>1</show_in_default>
          <show_in_website>1</show_in_website>
          <show_in_store>1</show_in_store>
          <fields>
            <send_mail_to_admin translate="label">
              <label>Enable to send email Notification to Admin when having new Order/Invoice/Shipment</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>1</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </send_mail_to_admin>
            <admin_default_sender translate="label">
              <label>Default Admin Email Address Received Notification</label>
              <frontend_type>text</frontend_type>
              <sort_order>11</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
              <depends>
                <send_mail_to_admin>1</send_mail_to_admin>
              </depends>
            </admin_default_sender>
          </fields>
        </multipleorderemail_options>
      </groups>
    </multipleorderemail>
  </sections>
</config>